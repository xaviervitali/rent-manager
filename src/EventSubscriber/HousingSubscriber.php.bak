<?php

namespace App\EventSubscriber;

use ApiPlatform\Symfony\EventListener\EventPriorities;
use App\Entity\Housing;
use Symfony\Bundle\SecurityBundle\Security;
use Symfony\Component\EventDispatcher\EventSubscriberInterface;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpKernel\Event\ViewEvent;
use Symfony\Component\HttpKernel\KernelEvents;

final class HousingSubscriber implements EventSubscriberInterface
{
    public function __construct(
        private Security $security
    ) {
    }

    public static function getSubscribedEvents(): array
    {
        return [
            KernelEvents::VIEW => ['setUserForHousing', EventPriorities::PRE_WRITE],
        ];
    }

    public function setUserForHousing(ViewEvent $event): void
    {
        $housing = $event->getControllerResult();
        $method = $event->getRequest()->getMethod();

        if (!$housing instanceof Housing || Request::METHOD_POST !== $method) {
            return;
        }

        // Assigner automatiquement le user connecté lors de la création
        $housing->setUser($this->security->getUser());
    }
}